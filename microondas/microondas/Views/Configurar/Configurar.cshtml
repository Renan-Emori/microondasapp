@model List<PreDefinidoModel>

@{
    ViewData["Title"] = "Configurar o microondas";
}

<h1 class="display-4">Lista de Modos de aquecimento do microondas</h1>
<br />

<br />
<br />


@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
        @TempData["MensagemSucesso"]
    </div> 
}


@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
        @TempData["MensagemErro"]
    </div>
}
<br />

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Alimento</th>
            <th scope="col">Tempo</th>
            <th scope="col">Potência</th>
            <th scope="col">Instruções</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null && Model.Any())
        {
            foreach (PreDefinidoModel preDefinido in Model)
            {
                if (preDefinido.Id <= 5)
                {
                    <tr>
                        <th scope="row">@preDefinido.Id</th>
                    <td>@preDefinido.Nome</td>
                    <td>@preDefinido.Alimento</td>
                    <td>@preDefinido.Tempo</td>
                    <td>@preDefinido.Potencia</td>
                    <td>@preDefinido.Instrucoes</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                                <a role="button" asp-route-id="@preDefinido.Id" asp-controller="Configurar" asp-action="AquecerPredef" class="btn btn-primary">Selecionar</a>
                        </div>
                    </td>
                    <td></td>
                    </tr>
                }
                else
                {
                    <tr style="font-style: italic">
                        <th scope="row">@preDefinido.Id</th>
                        <td>@preDefinido.Nome</td>
                        <td>@preDefinido.Alimento</td>
                        <td>@preDefinido.Tempo</td>
                        <td>@preDefinido.Potencia</td>
                        <td>@preDefinido.Instrucoes</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a role="button" asp-route-id="@preDefinido.Id" asp-controller="Configurar" asp-action="AquecerPredef" class="btn btn-primary">Selecionar</a>
                                <a role="button" asp-route-id="@preDefinido.Id" asp-controller="Configurar" asp-action="Editar" class="btn btn-primary">Editar</a>
                                <a role="button" asp-route-id="@preDefinido.Id" asp-controller="Configurar" asp-action="ApagarConfirmacao" class="btn btn-danger">Apagar</a>
                            </div>
                        </td>
                        <td></td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
    <a role="button" class="btn btn-primary" asp-controller="Configurar" asp-action="Criar">Cadastrar novo padrão</a>